.modal-dialog
  .modal-content
    .modal-header
      %button.close{ "data-dismiss" => "modal", type: "button" } Ã—
      %h2.modal-title
        Manage Commications
    #modal-form
      = simple_nested_form_for @contact, url: update_section_contact_url(@contact, section: "communications"), remote: true, html: { class: "form-horizontal" }, wrapper: :horizontal_form, wrapper_mappings: { boolean: :horizontal_boolean }  do |f|
        .modal-body
          .row
            .col-sm-10.col-sm-offset-2
              = hidden_field_tag :section, :communications
              = f.input :do_not_email
              = f.input :do_not_mail
              = f.input :send_cookies
              = f.input :send_mmi_ballgame_emails, label: "Send MMI ballgame emails"

        .modal-footer
          %button.btn.btn-default{ "data-dismiss" => "modal", type: "button" } Close
          = f.submit "Save", class: "btn btn-primary", data: { toggle: "button", "loading-text" => "Saving" }