.row.top-buffer-15
  #phone_numbers
    = f.fields_for :phone_numbers, (@entity.persisted? || @entity.phone_numbers.present?) ? @entity.phone_numbers : @entity.phone_numbers.build, wrapper: false do |phone_number_form|
      .col-md-4.fields
        .panel.panel-default
          .panel-heading
            .panel-title
              Phone number
          .panel-body
            = phone_number_form.input :kind, collection: PhoneNumber.kind.options, include_blank: false, label: false
            .row
              .col-md-8
                = phone_number_form.input :phone_number, placeholder: "Phone Number", label: false, input_html: { data: "phone-number-input", autocomplete: "off", required: true }
              .col-md-4
                = phone_number_form.input :extension, placeholder: "Extension", label: false, input_html: { data: "phone-number-extension-input", autocomplete: "off" }
            = phone_number_form.link_to_remove "Remove", class: "btn btn-danger"
  .col-md-4
    = f.link_to_add  "Add phone number", :phone_numbers, class: "btn btn-default add-new-phone-number-form", data: { target: "#phone_numbers" }