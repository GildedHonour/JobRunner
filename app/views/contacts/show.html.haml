.col-sm-11.for.content
  .contact.intro
    .row
      .col-sm-9.go.back
        = link_to contacts_url do
          %span.glyphicon.glyphicon-chevron-left
          Back to contacts list
      .col-sm-3
        = render "profile"
    .row
      .col-sm-12.basic.contact.info
        .contact.name
          = @contact.full_name
        .secondary.contact.info
          %span.label
            Email
          = @contact.email
          %span.label
            Phone
          = @contact.phone
          %span.label
            Address
          = @contact.address
          = @contact.address2
          = @contact.city
          = @contact.state
          = @contact.zip

  .contact.details
    .first.contact.row
      .col-sm-6
        .board.for.contact
          %h3 Relationships
          %h2 
            = @company.name
          %h4
            = @contact.job_title
          %h5 Affiliations
          %table.table.table-hover
            %tr
              %td Affiliation name
              %td Role: Client
              %td Status: Active
      .col-sm-6
        .board.for.contact
          %h3 User Account
          %table
            %tr
              %td.tlabel.for.attribute Email
              %td
                = @contact.email
            %tr
              %td
              %td
            %tr
              %td
              %td
  .contact.details
    .second.contact.row
      .col-sm-6
        .board.for.contact
          %h3 Communications
          %table
            %tr
              %td.tlabel.for.attribute Birthday
              %td 
                = @contact.birthday
            %tr
              %td.tlabel.for.attribute Holiday Card
              %td 
                = @contact.holiday_card
            %tr
              %td.tlabel.for.attribute Holiday Gift
              %td 
                = @contact.gift
            %tr
              %td.tlabel.for.attribute Birthday
              %td 
                = @contact.birthday
            %tr
              %td.tlabel.for.attribute MMI Ballgame Invite
              %td 
                = @contact.mmi_ballgame
            %tr
              %td.tlabel.for.attribute Wall Calendar
              %td 
                = @contact.wall_calendar
            %tr
              %td.tlabel.for.attribute Email Optout
              %td 
                = @contact.do_not_email
            %tr
              %td.tlabel.for.attribute Mail Optout
              %td 
                = @contact.do_not_mail
      .col-sm-6
        .board.for.contact
          %h3 Notes
          - @notes.each do |n|
            %div 
              = n.updated_at
            %div
              = n.note 
