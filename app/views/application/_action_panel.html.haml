.action-panel
  %h1
    = controller.controller_name.humanize
  = render "search", search_url: search_url
  %nav.internal.page.actions
    %ul.action.options
      %li
        Display by:
      %li
        = link_to "Company", companies_url_with_saved_filters, class: active_class_if_controller("companies")
      %li
        = link_to "Person", contacts_url_with_saved_filters, class: active_class_if_controller("contacts")
      %li.pull-right.actions.dropdown
        = link_to "#", data: { toggle: "dropdown" } do
          Actions
          %b.caret
        %ul.dropdown-menu
          %li{ style: "display: block;" }
            = link_to "Export as CSV", csv_export_url