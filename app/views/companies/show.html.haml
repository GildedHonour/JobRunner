.col-sm-12.for.content
  .contact.intro
    .row
      .col-sm-9.go.back
        = link_to companies_url do
          %span.glyphicon.glyphicon-chevron-left
          Back to companies list
      .col-sm-3
        = render "profile"
    .row
      .col-sm-12.basic.contact.info
        .contact.name
          = @company.name
        .secondary.contact.info
          %span.label
            Address
          = @company.address
          = @company.address2
          = @company.city
          = @company.state
          = @company.zip
          %span.label Web
          %span.label Phone
  .contact.details
    .first.contact.row
      .col-sm-12
        .board.for.contact
          %h3 Relationships
          %table.table.table-hover
            %tr
              %th Affiliations
              %th Role(s)
              %th Status
              %th Added
              %th Last Modified
            - @company.client_affiliates.each do |affiliate|
              %tr
                %td
                  = affiliate.name
                %td 
                  - @company.client_affiliate_affiliations.each do |affiliation|
                    = affiliation.role.text
                    %br
                %td 
                  - @company.client_affiliate_affiliations.each do |affiliation|
                    = affiliation.status.text
                    %br
                %td 
                  - @company.client_affiliate_affiliations.each do |affiliation|
                    = l(affiliation.created_at, format: :only_date)
                    %br
                %td 
                  - @company.client_affiliate_affiliations.each do |affiliation|
                    = l(affiliation.updated_at, format: :only_date)
                    %br
  .contact.details
    .second.contact.row
      .col-sm-12
        .board.for.contact
          %h3 People
          %table.table.table-hover
            %tr
              %th Name
              %th Title
              %th Email
              %th Phone
              %th Status
              %th Last Modified
            - @company.contacts.each do |contact|
              %tr
                %td 
                  = link_to contact.full_name, contact_url(contact)
                %td 
                  = contact.job_title
                %td 
                  = contact.email
                %td 
                  = number_to_phone(contact.phone)
                %td
                  = contact.status.text
                %td
                  = l(contact.updated_at, format: :only_date)