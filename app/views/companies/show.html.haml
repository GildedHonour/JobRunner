.neat-row
  .show.content
    .go.and.profile
      .go.back
        = link_to companies_url_with_saved_filters do
          %span.glyphicon.glyphicon-chevron-left
          View all companies
      .profile
        = render "profile"
    .company.intro
      .company.logo
        = image_tag @company.company_logo.url, alt: @company.name
      .company.info.pull-right
        .company.name
          = @company.name
          = link_to company_url(@company), class: "btn-fam no-border pull-right", data: { confirm: "Are you sure you want to delete the company '#{@company.name}'?", method: 'delete' } do
            %i.fa.fa-trash-o.pull-right
          = link_to edit_company_url(@company), class: "btn-fam no-border pull-right" do
            %i.fa.fa-pencil.pull-right
        .secondary.company.info.row
          .col-sm-2
            %span.label{ style: "white-space: normal;" }
              = @company.company_type
          .col-sm-4
            .row
              .col-sm-3
                %span.label
                  Phone
              .col-sm-9
                = @company.phone_numbers.join("<br>").html_safe
          .col-sm-3
            %span.label Web
            = @company.website
          .col-sm-3
            .row
              .col-sm-4
                %span.label
                  Address
              .col-sm-8
                - @company.addresses.each do |address|
                  .address
                    = [address.address_line_1, address.address_line_2, address.city, address.state, address.zip].compact.join(", ")

    .company.details
      .first.company.row
        .col-sm-12
          .board.for.company
            %h3 Relationships
            = link_to edit_section_company_url(@company, section: "internal_company_relationships"), class: "btn-fam no-border", remote: true do
              %i.fa.fa-pencil

            %table.table.table-hover
              %thead
                %tr
                  %th Company
                  %th Role(s)
                  %th Status
                  %th Added
                  %th Last Modified
              %tbody
                - @company.internal_company_relationships.ordered_by_internal_company_name.each do |relationship|
                  %tr
                    %td
                      = link_to relationship.internal_company.name, relationship.company
                    %td
                      = relationship.role.text
                    %td
                      = relationship.record_status
                    %td
                      = l(relationship.created_at, format: :only_date)
                    %td
                      = l(relationship.updated_at, format: :only_date)

    .company.details
      .second.company.row
        .col-sm-12
          .board.for.company
            %h3 Affiliations
            = link_to edit_section_company_url(@company, section: "affiliations"), class: "btn-fam no-border", remote: true do
              %i.fa.fa-pencil

            %table.table.table-hover
              %thead
                %tr
                  %th Company
                  %th Role(s)
                  %th Status
                  %th Added
                  %th Last Modified
              %tbody
                - @company.affiliate_affiliations.ordered_by_affiliate_name.each do |affiliation|
                  %tr
                    %td
                      = link_to affiliation.affiliate.name, affiliation.affiliate
                    %td
                      = affiliation.role.text
                    %td
                      = affiliation.record_status
                    %td
                      = l(affiliation.created_at, format: :only_date)
                    %td
                      = l(affiliation.updated_at, format: :only_date)

    .company.details
      .third.company.row
        .col-sm-12
          .board.for.company
            %h3 People
            %table.table.table-hover
              %thead
                %tr
                  %th Name
                  %th Title
                  %th Email
                  %th Phone
                  %th Status
                  %th Last Modified
              %tbody
                %tr
                  %td.add.a.contact{ colspan: 6 }
                    .wrap
                      %i.fa.fa-plus
                      = link_to "Add a new contact", new_company_contact_url(@company)
                - @company.contacts.each do |contact|
                  %tr
                    %td
                      = link_to contact.full_name, company_contact_url(@company, contact)
                    %td
                      = contact.job_title
                    %td
                      = contact.emails.join(",")
                    %td
                      = contact.phone_numbers.join(",")
                    %td
                      = contact.record_status
                    %td
                      = l(contact.updated_at, format: :only_date)