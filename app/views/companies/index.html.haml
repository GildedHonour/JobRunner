.col-sm-9.for.content
  = render "action_panel", search_url: companies_url
  .contacts.holder
    %table.table.for.contacts.table-hover
      %thead
        %tr
          %th
            = check_box_tag "select-contact"
          %th
          %th
            Name
          %th
            Affiliation(s)
          %th
            Role(s)
      %tbody
        %tr
          %td.add.a.company{ colspan: 5 }
            = link_to "+ Add a new company", new_company_url, class: "btn btn-link btn-sm", remote: true
      %tbody#companies-listing
        = render @companies
    #companies-pagination
      = paginate(@companies)
.col-sm-3.profile.on.listing.pages
  = render "profile"
  %h2
    Filters:
  %h2
    Affiliations
  #affiliations-filter
    .well
      %ul.list-unstyled
        - @all_principals[true].each do |principal|
          %li.checkbox
            = check_box_tag "affiliation_filter[company_ids]", principal.id
            = principal.name
    .well
      %ul.list-unstyled
        - @all_principals[false].each do |principal|
          %li.checkbox
            = check_box_tag "affiliation_filter[company_ids]", principal.id
            = principal.name