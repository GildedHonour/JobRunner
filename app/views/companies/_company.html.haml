%tr
  %td
    = image_tag company.company_logo.mini_thumb.url, alt: company.name
  %td
    = link_to company.name, company_url(company)
  %td
    %ul.list-unstyled
      - company.internal_company_relationships.each do |relationship|
        %li
          = relationship.internal_company.name
          %code
            = "#{(relationship.role.text)}"
  %td
    %ul.list-unstyled
      - company.all_principal_and_affiliates.each do |company|
        %li
          = company.name
          %code
            = company.company_type.name
